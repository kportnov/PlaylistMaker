<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="ButtonMainScreenStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/YP_black</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="ButtonSettingsActivityStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAlignment">textStart</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingVertical">21dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="ButtonBackNavigationStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/YP_black</item>
    </style>
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:minHeight">36dp</item>
        <item name="android:font">@font/ys_display_regular</item>
        <item name="android:textColorHint">@color/YP_text_grey</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="cursorColor">@color/YP_blue</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:drawableTint">@color/light_search_bar</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:backgroundTint">@color/YP_light_grey</item>
    </style>
</resources>